<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.retroxbmc"
  version="0.0.1"
  name="retroxbmc"
  provider-name="JetShred">
  <requires>
    <import addon="xbmc.gui" version="2.11"/>
  </requires>
  <extension 
    point="xbmc.gui.skin"
    defaultresolution="720p" 
    defaultresolutionwide="720p"
    effectslowdown="1.00"
    debugging="false"/>
  <extension point="xbmc.addon.metadata">
    <summary>retroXBMC by JetShred</summary>
    
    <description>retroXBMC is a port of the Plex theme RetroPlex.</description>
    
    <disclaimer></disclaimer>
    <disclaimer lang="nl"></disclaimer>
    <disclaimer lang="es"></disclaimer>
    <disclaimer lang="pl"></disclaimer>
    <disclaimer lang="de"></disclaimer>
    <platform>all</platform>
  </extension>
</addon>